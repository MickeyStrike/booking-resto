<%- include("partials/header") %>

<div>
    <h3><%= data.name %></h3>
    <h5><%= data.address %></h5>
    <h5><%= data.phone_number %></h5>
    <h5><%= data.open_hour %></h5>
</div>

<div>
    <form method="POST" action="/restaurant/book/<%= data.id %> ">
        <div class="form-group">
            <label for="reservation_date">Reservation Date</label>
            <input type="datetime-local" value="2020-08-19T13:45:00" class="form-control" id="reservation_date" name="reservation_date">
        </div>
        <div class="form-group">
            <label for="people" class="col-2 col-form-label">People</label>
            <input class="form-control" type="number" value="1" id="people">
        </div>
        <button type="submit" class="btn btn-primary">Book</button>
    </form>
</div>

<%- include("partials/footer") %> 