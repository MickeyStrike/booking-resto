<%- include("partials/header") %> 
<div class="div-table table-small">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Resto Name</th>
                <th scope="col">Address</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% if(data.length) { %>
                <% for(let i in data) { %> 
                    <tr>
                        <td><%= +i + 1 %> </td>
                        <td><%= data[i].name %> </td>
                        <td><%= data[i].address %> </td>
                        <td>
                            <a href="/restaurant/<%= data[i].id %>" class="btn btn-primary">
                                <i class="far fa-eye"></i> View
                            </a>
                        </td>
                    </tr>
                <% } %> 
            <% } %>
        </tbody>
    </table>
</div>
<%- include("partials/footer") %> 